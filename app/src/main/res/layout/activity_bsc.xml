<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".bsc.bsc"
    android:background="@drawable/login_card">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:orientation="vertical"
        android:layout_marginRight="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="198dp"
            android:layout_height="177dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="105dp"
            android:foregroundGravity="center"
            android:src="@drawable/dsv"
            app:civ_border_color="#2962FF"
            app:civ_border_width="3dp">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/view"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:text="B.SC"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="4sp"
            android:background="#fff"
            />



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5sp"
                android:gravity="center">


                <TextView
                    android:id="@+id/agri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundbutton1"
                    android:fontFamily="serif-monospace"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="AGRICULTURE"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/radiology"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/roundbutton1"
                    android:fontFamily="serif-monospace"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="RADIOLOGY"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="30dp" />


                <TextView
                    android:id="@+id/nutrition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/roundbutton1"
                    android:fontFamily="serif-monospace"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="NUT.&amp; DIETICS"
                    android:textAlignment="center"
                    android:textColor="#fff"

                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/physics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/roundbutton1"
                    android:fontFamily="serif-monospace"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="PHYSICS HONS."
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/math"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/roundbutton1"
                    android:fontFamily="serif-monospace"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="MATHS HONS."
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="30dp" />


                <TextView
                    android:id="@+id/chemistry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/roundbutton1"
                    android:fontFamily="serif-monospace"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="CHEMISTRY HONS."
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/graphic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/roundbutton1"
                    android:fontFamily="serif-monospace"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="GRAPHICS &amp;DESIGNING"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="30dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="680sp"
        android:fontFamily="serif-monospace"
        android:text="Quantum-Model Book"
        android:background="#F80505"
        android:textAlignment="center"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="30dp" />
</RelativeLayout>